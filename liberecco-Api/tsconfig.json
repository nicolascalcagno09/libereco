{
  "compilerOptions": {
    "baseUrl": "./src/",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "es6",
      "dom"
    ],
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "./src", "src/Persistence/Repositories/.ts", "src/API/Application/Commands/Workwaves/.ts"
  ]
}
